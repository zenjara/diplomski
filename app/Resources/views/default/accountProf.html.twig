{% extends 'base.html.twig' %}




{% block body %}
    <div class="container account">
        {% if app.user.firstname %}
            <h1 class="text-center">Welcome {{ app.user.firstname}}!</h1>
        {% else %}
            <h1 class="text-center">Welcome {{ app.user.username}}!</h1>
        {% endif %}

        {% if subjects %}
            <div class="container well info">
                You are teaching :
                {%for subject in subjects %}
                    <li><a href="/professors/descriptions/{{ subject.subjectName }}">{{ subject.subjectName }}</a></li>
                {% endfor %}
            </div>
        {% else %}
            <div class="container well info ">
                You have no subject/s linked to you.
            </div>
        {% endif %}

        <div class="container options">
            <a href="/professors/edit"><button class="btn btn-default">Enter/Edit Profile information</button></a><br>
            <a href="/professors/list"><button class="btn btn-default">See the list of your students</button></a><br>
            <a href="/professors/search"><button class="btn btn-default">Search for students and professors</button></a><br>

            {#<a href="/professors/edit">Enter or edit your Profile information</a><br><br>
            <a href="/professors/list">See the list of your students</a><br><br>
            <a href="/professors/search">Search for students and professors</a><br><br>#}

            <a href="{{ path('user_logout') }}">Logout</a>
        </div>
    </div>
{% endblock %}
