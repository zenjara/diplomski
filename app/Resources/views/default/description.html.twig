{% extends 'base.html.twig' %}


{% block body %}
    <div class="container edit">

        {% if isProfessor %}
            <h3>{{ accountProfessor.firstName }} {{ accountProfessor.lastName }}</h3>
            <div class="container ">
                Teaching:
            {% if visitorIsProfessor %}
                {% for subject in subjects  %}
                   <li> <a href="/professors/{{ subject.subjectName }}">{{ subject.subjectName }}</a></li>
                {% endfor %}
            {% else %}
                {% for subject in subjects  %}
                    <li> <a href="/description/professors/{{ subject.subjectName }}">{{ subject.subjectName }}</a></li>
                {% endfor %}
            {% endif %}
            </div>

        {% else %}
            <h3>{{ accountStudent.firstname }} {{ accountStudent.lastname }}</h3>
            <div class="container ">
                Year: {{ accountStudent.yearOfStudy }}<br>
                Semester: {{ accountStudent.semestar }}
            </div>

        {% endif %}


        <form action="" method="post">
            <div class="form-group">
                <label for="full_name">Full name </label><input class="form-control" placeholder="Full Name" type="text" id="full_name" name="fullName" >
            </div>
            <div class="form-group">
                <label for="email">Email </label><input class="form-control" placeholder="e-mail" type="text" id="email" name="email" value={{visitor.email}}>
            </div>
            <div class="form-group">
                <label for="subject">Subject </label><input class="form-control" placeholder="Subject" type="text" id="subject" name="subject">
            </div>
            <div class="form-group">
                <label for="message">Message </label><textarea class="form-control" name="message" id="message"></textarea>
            </div>
           <button class="btn btn-primary" type="submit" name="send" >Send</button>

        </form>


    </div>
{% endblock %}


